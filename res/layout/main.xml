<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:id="@+id/s2z_home"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:orientation="vertical">

    <Button android:text="Scan New Item"
            android:id="@+id/scan_isbn"
            android:layout_width="match_parent" 
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:background="@drawable/fancy_button"
			android:textColor="#FFFFFFFF"
			android:shadowColor="#FF000000"
			android:shadowDx="-1"
			android:shadowDy="-1"
			android:shadowRadius="0.2"
			android:textSize="30dp"
			android:textStyle="bold"
			android:focusable="true"
			android:clickable="true" />

    <ExpandableListView android:id="@+id/bib_items"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_below="@id/s2z_home"
                        android:childIndicator="@drawable/bib_child_indicator"
                        android:childDivider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:paddingBottom="15dp">
    </ExpandableListView>

</LinearLayout>