<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/pending_item_row" android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ProgressBar android:id="@+id/pending_item_progress_indef"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<TextView android:id="@+id/pending_item_status" android:text="Loading:"
		android:layout_toRightOf="@id/pending_item_progress_indef"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingLeft="30dp" android:paddingRight="15dp"
		android:layout_centerVertical="true" />

	<TextView android:id="@+id/pending_item_id"
		android:layout_toRightOf="@id/pending_item_status"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerVertical="true" />
</RelativeLayout>